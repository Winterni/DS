// bubblesort1A.cpp: 定义控制台应用程序的入口点。
//

#include "stdafx.h"
#include <iostream>
#include <algorithm>
using namespace std;


int main()
{
    return 0;
}

void bubblesort1A(int A[], int n) {
	bool sorted = false;
	while (!sorted) {
		sorted = true;
		for (int i = 1; i < n; i++) {
			if (A[i - 1] > A[i]) {
				swap(A[i - 1], A[i]);
				sorted = false;
			}
			
		}
		n--;
	}

}
